{
  "kind": "collectionType",
  "collectionName": "stories",
  "info": {
    "singularName": "story",
    "pluralName": "stories",
    "displayName": "story"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "country_code": {
      "type": "string",
      "minLength": 2,
      "maxLength": 2,
      "required": true
    },
    "content": {
      "type": "blocks",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "author": {
      "type": "string"
    },
    "author_avatar": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    }
  }
}
